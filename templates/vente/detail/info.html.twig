{% extends 'base.html.twig' %}
{% block title %}Annonce : {{ salecars.marque }} {{ salecars.modele }}{% endblock %}
{% block body %}
<div class="annonce-title" style="background-image: url({{ salecars.img }});">
    <div class="container">
        <h1>{{ salecars.marque }}</h1>
        <h2>{{ salecars.modele }}</h2>
    </div>
</div>
<div class="info">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class=" row jumbotron mt-2 mr-3">
                    <div id="carouselExampleCaptions" class="carousel slide col-12" data-ride="carousel">
                        <ol class="carousel-indicators">
                           {% for image in salecars.images %}
                                <li data-target="#carouselExampleCaptions" data-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" {% endif %}></li>    
                            {% endfor %}
                        </ol>
                        <div class="carousel-inner">
                            {% for image in salecars.images %}
                                <div class="carousel-item {% if loop.first %}active{% endif %}">
                                    <img src="{{ image.url }}" class="d-block w-100" alt="image de {{ salecars.marque }}">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h5>{{ salecars.marque }}</h5>
                                        <p>{{ image.info }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                        
                        
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                            <span class="sr-only">Next</span>
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            
                        </a>
                    </div> 
                </div> 
            </div>  
            
            <div class="col jumbotron mt-2">
                <div class="row">
                    <a class="btn btn-success btn-lg " href="#" role="button">Contacter le vendeur</a> 
                    <div class="col-md-6">
                        <div class="info1 mt-3">
                            <h3>KM : {{ salecars.km | number_format(0, '','.') }} KM</h3>
                            <h3>Prix : {{ salecars.prix | number_format(0,'','.') | nl2br}} €</h3>
                        </div>
                            <p class="mt-5">Nombre de propiétaire : {{ salecars.proprietaire }}</p> 
                            <p class="mt-5">Cylindrée : {{ salecars.cylindree | number_format(0, '','.') }} cm³</p>
                            <p>Puissance : {{ salecars.puissance }} ch</p>
                            <p>Carburant : {{ salecars.carburant }}</p>
                            <p>Année de mise en circulation : {{ salecars.annee }}</p>
                            <p>Type de transmission : {{ salecars.transmission }}</p>
                    </div>
                </div>
                    <div class="description col-12 mt-3">
                        <H4 class="mb-3">Description :</H4>
                        {{ salecars.description | raw | nl2br}}
                    </div>   
                    <div class="option col-12 mt-3">    
                        <h4 class="mb-3">Option :</h4>
                        {{ salecars.opt | raw | nl2br}}
                    </div>
                </div>
            </div>     
        </div>
    </div> 
</div>
{% endblock %}
